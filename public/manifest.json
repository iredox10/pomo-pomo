{
  "manifest_version": 3,
  "name": "TickTick Pomodoro",
  "version": "1.0.0",
  "description": "A feature-rich Pomodoro timer with task management and statistics",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "offscreen",
    "tabs"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
